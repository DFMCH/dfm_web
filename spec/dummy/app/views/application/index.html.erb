<div class="pure-g">
  <div class="pure-u-1 pure-u-lg-1-2">
    <%= render partial: 'table' %>
  </div>
  <div class="pure-u-1 pure-u-lg-1-2">
    <%= render partial: 'table' %>
  </div>
  <div class="pure-u-1 pure-u-lg-1-2">
    <%= render partial: 'table' %>
  </div>
</div>

