/*
UW RED	$uw-red	#c5050c	UW–Madison’s primary color. Used for design elements, navigation bars, nonlinked headers, and backgrounds. Not used for links.
UW RED DARK	$uw-red-dark	#9b0000	Accent color. Used in alternating boxes component.
UW PAGE BACKGROUND	$uw-page-bg	#f7f7f7	Background color.
UW GRAY-BLUE	$uw-gray-blue	#dadfe1	Background and accent color.
UW GRAY DARKER	$uw-gray-darker	#646569	Design element background color and accent color.
UW GRAY DARKEST	$uw-gray-darkest	#282728	Design element background color, accent color, and footer background color. Often used in place of black.
UW BODY FONT	$uw-body-font	#494949	Used for standard text on a white background.
UW ANCHOR COLOR	$uw-anchor-color	#0479a8	Used for links in standard text on a white background.
UW GRAY FOOTER TEXT	$uw-gray-footer-text	#adadad	Used for footer text.
UW GRAY FOOTER TEXT HOVER	$uw-gray-footer-text-hover	#f9f9f9	Used for links in footer text.
*/

/* The Verlag license prevents it's inclusion                                                                                                 here.
   Download the .css version and add to your host-app.
   Normal availability fallback will skip it if you don't. */
html, .pure-g, .pure-g [class *= "pure-u"] {
  font-family: "Verlag", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* html tag should really only have background styles */
html {
  color: #494949;
  background-color: #f7f7f7;
  background-image: url(<%= asset_path 'dfm_web/terrace-chair.png' %>), url(<%= asset_path 'dfm_web/defective_monitor.png' %>);
  background-size: cover;
  background-attachment: fixed;
}

#notice, #alert {
  color: white;
  background: none;
  background-color: #338932;
}


/* Hover the close button to add visual cue */
#notice:hover:after, #alert:hover:after {
  background-color: rgba(0,0,0,.2);
  transition: background-color 0s;
}

#alert {
  background-color: #b94a48;
}

/* Give the notice content the same max width as the Nav */
#notice > div, #alert > div {
  width: 100%;
  max-width: 1800px;
  margin: 0 auto;
}

/* Hide Rails scaffold notice bars */
main #main p#notice { display: none; }


#main {
  background-color: #f7f7f7;
  border: 1px solid white;
  box-shadow: -10px 10px 60px rgba(0,0,0,.5);
}

footer {
  color: #f9f9f9;
  background-color: #494949;
  box-shadow: 0 0 60px rgba(255,255,255,.5);
}

footer #footer {
  padding: 0;
  line-height: 32px;
  vertical-align: middle;
}

/* Generic panel to isolate content visually */
.panel {
  border: 1px solid rgba(0,0,0,.2);
  padding: 20px;
  margin-bottom: 20px;
  background-color: white;
  overflow-x: hidden;
}

/* Form within a panel needs a touch of color */
.panel input[type="text"],
.panel input[type="password"],
.panel input[type="email"],
.panel input[type="number"],
.panel input[type="file"],
.panel textarea,
.panel select{
  background-color: rgb(255, 255, 247);
}

/* Special style for warn and alert.  box-shadow instead of border-width so the content doesn't shift */
.panel.okay       { background-color: rgba(0, 255, 0, 0.11);    border-color: rgb(0, 183, 0);     box-shadow: inset 4px 0 0 0 rgb(0, 183, 0);   }
.panel.highlight  { background-color: rgba(255, 255, 0, 0.16);  border-color: rgb(200, 200, 52);  box-shadow: inset 4px 0 0 0 rgb(200, 200, 52); }
.panel.warn       { background-color: rgba(255, 147, 0, 0.11);  border-color: rgb(255, 147, 0);   box-shadow: inset 4px 0 0 0 rgb(255, 147, 0); }
.panel.alert      { background-color: rgba(255, 0, 0, 0.09);    border-color: rgb(168, 1, 0);     box-shadow: inset 4px 0 0 0 rgb(168, 1, 0); }
.panel.gray       { background-color: rgba(0, 0, 0, 0.1);       border-color: rgb(128, 128, 128); box-shadow: inset 4px 0 0 0 rgb(128, 128, 128); }


/* Simulate a print-out */
.paper {
  margin: 0 auto 50px auto;
  max-width: 8.5in;
  padding: .5in;
  background-color: #fcfcfc;
  border: 1px solid #ddd;
  box-shadow: 8px 8px 30px rgba(0,0,0,.4);
}

.hide,
.hidden   { display: none; }
.full     { width: 100%; }
.half     { width: 50%; }
.w150     { width: 150px !important;}
.right    { float: right;}
.left     { float: left;}
.r        { text-align: right;}
.l        { text-align: left;}
.nobr     { white-space: nowrap; }


/* #Typography
================================================== */
h1, h2, h3, h4, h5, h6 {
  display: table; /* like block, but doesn't use 100% width when undefined */
  margin: 3px 0 0 0; /* Unfortunately we need 3px to line up with buttons. See forms.css */
  font-weight: inherit;
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a { font-weight: inherit; }
h1 { font-size: 2em; line-height: 1.3em; margin-bottom: 10px; clear:both;}
h2 { font-size: 1.6em; line-height: 1.3em; margin-bottom: 8px; }
h3 { font-size: 1.2em; line-height: 1.3em; margin-bottom: 6px; }
p  { font-size: 1em;  line-height: 1.3em; margin: 0; }


/* Alert and Warn rules are added to specific elements.  Buttons, Typography, panels all are totally different */


h1.okay, h2.okay, h3.okay, p.okay, span.okay { color: rgb(0, 168, 0); }
h1.highlight, h2.highlight, h3.highlight, p.highlight, span.highlight { color: rgb(191, 188, 0); }
h1.warn,  h2.warn,  h3.warn,  p.warn,  span.warn {color: rgb(199, 122, 0); }
h1.alert, h2.alert, h3.alert, p.alert, span.alert { color: rgb(168, 1, 14); }
h1.gray, h2.gray, h3.gray, p.gray, span.gray { color: rgb(166, 166, 166); }


/* Header right before .button  */
h1 + .button {
  float: right;
  margin-top: -3em;
}

/* Header right after .button  */
.button + h1 {
  display: inline-block;
  vertical-align: bottom;
}

/* Place a margin between consecutive <p> blocks */
p              { margin: 0 0 1em 0; }


.inline {
  display: inline;
}

img {
  margin: 0;
  vertical-align: top; /* vertical align fixes the mystery padding below img tags. */
  max-width: 100%;
}

em { font-style: italic; }
small { font-size: 80%; }
.monospace { font-family: monospace; font-size: 1.1em; }

hr {
  border: 0;
  height: 6px;
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(59, 96, 140, 0.4), rgba(0, 0, 0, 0));
  margin: 10px 0 30px 0;
  text-align: center;
}

/* #Links
================================================== */
a, a:visited { color: #0479a8; text-decoration: none; outline: 0; transition:color .33s; }
p a, p a:visited { line-height: inherit; }

/* Lists */
ul, ol { margin: 0; padding: 0 0 0 1em; }
ul li, ol li { margin: .5em 0 .5em 0; }

li.okay       { color: rgb(0, 180, 0); }
li.highlight  { color: rgb(177, 171, 40); }
li.warn       { color: rgb(198, 118, 0); }
li.alert      { color: rgb(233, 0, 0); }
li.gray       { color: rgb(122, 122, 122); }


/* Reveal subtext on hover */
/* transitions don't work with width: auto, so a large-enough max-width is used instead */
/* Example: <h1 class="hover_span">LD<span>AP&nbsp;</span>E<span>n</span>R<span>ichment&nbsp;</span>P<span>rogram</span></h1>  */
.hover_span span {
  white-space: nowrap;
  max-width: 0;
  overflow: hidden;
  transition: max-width .75s;
  vertical-align: top;
  display: inline-block;
}
.hover_span:hover span {
  max-width: 300px;
  transition: max-width 1.5s;
}
